{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES2022",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "jsx": "react",
        "lib": ["DOM", "ES6"],
        "typeRoots": ["types", "../types"],
        "types": ["vite-plugin-pwa/client"]
    },
    "include": ["src", "public/worker.js"],
    "exclude": ["node_modules"]
}
